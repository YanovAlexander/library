<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context-3.2.xsd ">
    <context:spring-configured/>
    <context:annotation-config/>
    <context:component-scan base-package="com.library"/>

    <bean id="com.library.hibernateDatabaseConnector"
          class="com.library.config.HibernateDatabaseConnector"/>

    <bean id="com.library.bookRepository"
          class="com.library.model.BookRepository">
        <constructor-arg ref="com.library.hibernateDatabaseConnector"/>
    </bean>

    <bean id="com.library.bookService"
          class="com.library.service.BookService"/>

    <bean id="com.library.authorRepository"
          class="com.library.model.AuthorRepository">
        <constructor-arg ref="com.library.hibernateDatabaseConnector"/>
    </bean>

    <bean id="com.library.authorService"
          class="com.library.service.AuthorService">
        <constructor-arg ref="com.library.authorRepository"/>
    </bean>

</beans>
